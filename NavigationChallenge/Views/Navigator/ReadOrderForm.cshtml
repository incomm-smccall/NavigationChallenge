@model NavigationChallenge.Models.Order

<div class="container-fluid col-md-6">
    <div class="row">
        <div class="col-md-6">Trading Partner</div>
        <div class="col-md-6">@Model.TradingPartnerId</div>
    </div>
    <div class="row">
        <div class="col-md-6">Order Number</div>
        <div class="col-md-6">@Model.PurchaseOrderNumber</div>
    </div>
    <div class="row">
        <div class="col-md-6">Order Date</div>
        <div class="col-md-6">@Model.PurchaseOrderDate</div>
    </div>
</div>
<br />
@foreach (var item in Model.AddressList)
{
<div class="container col-md-6 border">
    <div class="row">
        <div class="col-md-6">Address Name</div>
        <div class="col-md-6">@item.AddressName</div>
    </div>
    <div class="row">
        <div class="col-md-6">Address</div>
        <div class="col-md-6">@item.Address1</div>
    </div>
    <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-6">@item.Address2</div>
    </div>
    <div class="row">
        <div class="col-md-2">City</div>
        <div class="col-md-2">@item.City</div>
        <div class="col-md-2">State</div>
        <div class="col-md-2">@item.State</div>
    </div>
    <div class="row">
        <div class="col-md-2">Postal Code</div>
        <div class="col-md-2">@item.PostalCode</div>
        <div class="col-md-2">Country</div>
        <div class="col-md-2">@item.CountryCode</div>
    </div>
</div>
<br />
}

@foreach (var item in Model.OrderItems)
{
<div class="container col-md-6 border">
    <div class="row">
        <div class="col-md-6">Buyer Part Number</div>
        <div class="col-md-6">@item.BuyerPartNumber</div>
    </div>
    <div class="row">
        <div class="col-md-6">Vendor Part Number</div>
        <div class="col-md-6">@item.VendorPartNumber</div>
    </div>
    <div class="row">
        <div class="col-md-6">Quantity</div>
        <div class="col-md-6">@item.OrderQty</div>
    </div>
    <div class="row">
        <div class="col-md-6">Unit Of Messure</div>
        <div class="col-md-6">@item.OrderQtyUOM</div>
    </div>
    <div class="row">
        <div class="col-md-6">Price</div>
        <div class="col-md-6">@item.PurchasePrice</div>
    </div>
</div>
<br />
}