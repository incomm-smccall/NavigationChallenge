
@using (Html.BeginForm("ReadOrderForm", "Navigator", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group row">
        <div class="col-md-12 pt-2 pl-5">
            <div class="row">
                <label for="navOrder" class="col-form-label pr-3">Orders File</label>
                <input type="file" class="form-control-file" name="orderUpload" id="navOrder" />
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.ActionLink("Cancel", "", "Navigator", new { @class = "btn btn-sm btn-primary btn-width" })
        <button type="submit" class="btn btn-sm btn-primary btn-width">Submit</button>
    </div>
}